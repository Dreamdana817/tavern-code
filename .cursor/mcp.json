{
  "mcpServers": {
    "github.com/AgentDeskAI/browser-tools-mcp": {
      "disabled": false,
      "timeout": 60,
      "command": "pnpm",
      "args": [
        "dlx",
        "@agentdeskai/browser-tools-mcp@latest"
      ],
      "transportType": "stdio",
      "autoApprove": [
        "getConsoleLogs",
        "getConsoleErrors",
        "getNetworkErrors",
        "getNetworkLogs",
        "takeScreenshot",
        "getSelectedElement",
        "wipeLogs",
        "runAccessibilityAudit",
        "runPerformanceAudit",
        "runSEOAudit",
        "runNextJSAudit",
        "runDebuggerMode",
        "runAuditMode",
        "runBestPracticesAudit"
      ]
    }
  }
}
